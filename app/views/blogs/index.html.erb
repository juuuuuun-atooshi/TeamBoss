<div class="container">
  <div class="col-md-8 col-md-offset-2 col-sm-10">
    <p id="notice"><%= notice %></p>

    <h1>Listing Blogs</h1>

    <table>
      <thead>
        <tr>
          <th>ユーザー名</th>
          <th>Title</th>
          <th>Content</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @blogs.each do |blog| %>
          <tr>
            <td><%= blog.user.name %></td>
            <td><%= blog.title %></td>
            <td><%= blog.content %></td>
            <td><%= link_to 'Show', blog, class: 'btn btn-success' %></td>
            <td><%= link_to 'Edit', edit_blog_path(blog), class: 'btn btn-primary' %></td>
            <td><%= link_to 'Destroy', blog, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>

    <%= link_to 'New Blog', new_blog_path %>
  </div>
</div>
